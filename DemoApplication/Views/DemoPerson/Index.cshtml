@using DemoApplication.Models
@model DemoApplication.Models.DemoPersonViewModel

@{
	var countriesList = ViewBag.Countries as List<CountryViewModel>;
	var countriesItems = countriesList.Select(c => new SelectListItem
	{
		Text = c.Title,
		Value = c.Title
	});
}

	@using (Html.BeginForm())
	{


	<div>
		@* Content for First name *@
		@Html.LabelFor(x => x.FirstName)
		@Html.EditorFor(x => x.FirstName)
		@Html.ValidationMessageFor(x => x.FirstName)
	</div>

	<div>
		@Html.LabelFor(x => x.LastName)
		@Html.EditorFor(x => x.LastName)
		@Html.ValidationMessageFor(x => x.LastName)
	</div>

	<div>
		@Html.LabelFor(x => x.Age)
		@Html.EditorFor(x => x.Age)
		@Html.ValidationMessageFor(x => x.Age)
	</div>

	<div>
		@if (countriesList != null)
		{
			@Html.LabelFor(x => x.Country)
			@Html.DropDownListFor(x => x.Country, countriesItems)
		}	
	</div>

	<div>
		<input type="submit" value="Send" />
	</div>
	}
